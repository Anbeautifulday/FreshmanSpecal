<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:paddingTop="5dp"
                android:textColor="#292421"
                android:text="军训图片"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:id="@+id/training_image_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:id="@+id/training_image_second"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_margin="10dp"
                    android:id="@+id/training_image_third"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="重邮军魂"
                    android:id="@+id/training_desc_first"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="整齐划一"
                    android:id="@+id/training_desc_second"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="拉练活动"
                    android:id="@+id/training_desc_third"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/training_image_fourth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/training_image_fifth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/training_image_sixth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="拨挡冲拳"
                    android:id="@+id/training_desc_fourth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="射击训练"
                    android:id="@+id/training_desc_fifth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:paddingTop="7dp"
                    android:paddingLeft="20dp"
                    android:text="分列式风采"
                    android:id="@+id/training_desc_sixth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>